@model List<Models.Todo.ListTodoVM>


@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        @TempData["success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Todo" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Todo
            </a>
        </div>
    </div>

    <table class="table table-bordered table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Category
                </th>
                <th>
                    Date
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Model)
            {
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.CategoryName</td>
                    <td>@todo.Date</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.TodoId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Todo" asp-action="Delete" asp-route-id="@todo.TodoId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>